<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:tools="http://schemas.android.com/tools"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			  android:orientation="vertical"
			 tools:context="com.reimbursementhelper.ui.project.ProjectBudgetFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/tv_project_budget_name"
			android:layout_weight="1"
			android:text="支出经费"
			android:textAlignment="center"
			android:textColor="@color/blackText1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/tv_project_budget_money"
			android:layout_weight="1"
			android:text="经费额（轻触修改）"
			android:textAlignment="center"
			android:textColor="@color/blackText1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	</LinearLayout>

	<ListView
		android:id="@+id/lv_project_budget"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>

	<Button
		android:id="@+id/btn_budget_submit"
		android:text="提交"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

</LinearLayout>
